<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog <%=blog.title%></div>


<form class="ui form" action="/blogs/<%=blog.id%>?_method=PUT" method="POST">
    <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" value="<%=blog.title%>">
    </div>
    <div class="field">
        <label>Image URL</label>
        <input type="text" name="blog[image]" value="<%=blog.image %>">
    </div>
    <div class="field">
        <label>Blog Post</label>
        <textarea name="blog[body]"><%=blog.body %></textarea>   
    </div>
    <div> <input class="ui basic black big button" type="submit"></div>
</div>
    
</form>




<% include partials/footer %>